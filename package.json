{
  "name": "moovie",
  "version": "0.3.4",
  "description": "An advanced HTML5 video player for MooTools.",
  "main": "index.js",
  "devDependencies": {
    "bower": "^1.7.9",
    "eslint": "^3.1.1",
    "expectations": "^0.6.0",
    "karma": "^1.1.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-opera-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "uglify-js": "^2.7.0"
  },
  "dependencies": {},
  "scripts": {
    "postinstall": "bower install",
    "lint": "eslint **/*.js --color --fix --quiet",
    "test": "karma start",
    "posttest": "npm run lint",
    "minify:js": "uglifyjs dist/moovie.js --output=dist/moovie.min.js",
    "minify:css": "node-sass src/scss/main.scss dist/moovie.min.css --output-style=compressed --linefeed=lf",
    "minify": "npm run minify:js && npm run minify:css",
    "prepublish": "echo build...",
    "compile:scss": "node-sass src/scss/main.scss dist/moovie.css --output-style=expanded --linefeed=lf --indent-type=space --indent-width=4",
    "compile:js": "node scripts/concat.js",
    "compile": "npm run compile:js && npm run compile:scss",
    "build": "echo test, build, minify...",
    "preversion": "npm test",
    "version": "node scripts/bump.js && git add bower.json src/js/*.js",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moovie/moovie.git"
  },
  "keywords": [
    "html5",
    "mootools",
    "playlist",
    "subtitles"
  ],
  "author": "Colin Aarts <colin@colinaarts.com> (http://colinaarts.com)",
  "contributors": [
    "Nathan Bishop <nbish11@hotmail.com> (https://nathanbishop.name)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moovie/moovie/issues"
  },
  "homepage": "https://github.com/moovie/moovie#readme"
}
