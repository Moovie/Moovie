{
  "name": "moovie",
  "version": "0.4.5",
  "description": "An advanced HTML5 video player for MooTools.",
  "main": "dist/moovie.js",
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "bower": "^1.7.9",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "eslint": "^3.3.1",
    "eslint-plugin-mootools": "^1.1.0",
    "expectations": "^0.6.0",
    "isparta": "^4.0.0",
    "karma": "^1.1.1",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-detect-browsers": "^2.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-opera-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "npm-run-all": "^2.3.0",
    "rimraf": "^2.5.4",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "uglify-js": "^2.7.0"
  },
  "dependencies": {
    "global": "^4.3.0",
    "screenfull": "^3.0.2",
    "vtt.js": "^0.12.1"
  },
  "scripts": {
    "postinstall": "bower install",
    "push": "git push --follow-tags",
    "clean": "rimraf dist/**/*",
    "lint": "eslint **/*.js --color",
    "lint:fix": "eslint **/*.js --fix --color",
    "pretest": "npm run lint",
    "test": "karma start tests/karma.conf.js",
    "posttest": "echo generating test coverage...",
    "minify": "npm-run-all -p minify:*",
    "minify:js": "browserify src/js/Moovie.js -s Moovie | uglifyjs -c > dist/moovie.min.js",
    "minify:css": "node-sass src/scss/main.scss dist/moovie.min.css --output-style=compressed --linefeed=lf",
    "compile": "npm-run-all -p compile:*",
    "compile:js": "browserify src/js/Moovie.js -s Moovie > dist/moovie.js",
    "compile:scss": "node-sass src/scss/main.scss dist/moovie.css --output-style=expanded --linefeed=lf",
    "preversion": "npm test",
    "version": "node scripts/bump.js && git add .",
    "build": "npm-run-all clean -p compile minify",
    "prepublish": "npm run build",
    "release:patch": "npm version patch && npm publish && npm run push",
    "release:minor": "npm version minor && npm publish && npm run push",
    "release:major": "npm version major && npm publish && npm run push",
    "release": "npm run release:patch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moovie/moovie.git"
  },
  "keywords": [
    "html5",
    "mootools",
    "playlist",
    "subtitles"
  ],
  "author": "Colin Aarts <colin@colinaarts.com> (http://colinaarts.com)",
  "contributors": [
    "Nathan Bishop <nbish11@hotmail.com> (https://nathanbishop.name)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moovie/moovie/issues"
  },
  "homepage": "https://github.com/moovie/moovie#readme",
  "browserify": {
    "debug": true,
    "transform": [
      "babelify"
    ]
  }
}
